  .container--inner
    .breadcrumbs
      ul.breadcrumbs-list
        li.breadcrumbs-item
          a(href="") Главная
        li.breadcrumbs-item
          a(href="") Контакты
    .page-title
      h1 Контакты
    .contacts-container
      .contacts-wrapper
        .contacts-item
          p.contacts-item__name.common-text Телефон
          a(href="").contacts-item__tel.common-h2 +7 351 211-44-57
          p.contacts-item__text.common-text На ваши звонки отвечает менеджер Светлана
        .contacts-item
          p.contacts-item__name.common-text Адрес
          p.contacts-item__text.common-text Челябинск, ул Воровского, 36В
      .contacts-img
        .contacts-img__circle
