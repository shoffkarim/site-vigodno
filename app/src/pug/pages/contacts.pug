section.callback.contacts-callback
  .container
    .callback-container
      .callback-wrapper
        p.callback-title Обратная связьь
        p.callback-text Обратите внимание, все поля обязательны для заполнения.
        form(action="" method="method").callback-form.js-form
          .form-wrapper
            .form-container
              .form-block.js-labels-container
                input.form-input.js-valid(type="text")
                label.form-label(for="") Имя
              .form-block.js-labels-container
                input.form-input.js-valid.tel-mask(type="tel")
                label.form-label(for="") Телефон
            .form-block.js-labels-container
              textarea.form-textarea.js-valid(type="textarea")
              label.form-label(for="") Текст вопроса
          label.fake-checkbox(for="checkbox1")
            input.js-valid(type="checkbox", id="checkbox1")
            .fake-checkbox__box
            .fake-checkbox__text Согласен на обработку <a href="">персональных данных</a>
          .form-button
            button.btn.btn-purple.js-bubble-hover.js-submit(type='submit')
              span Отправить
      .callback-background
        .callback-background--1
        .callback-background--2
        .callback-background--3
        .callback-background--4

